@using ButikSite.Models
@model ButikSite.Models.Class1

@{
    ViewBag.Title = "ÜrünDetay";
    Layout = "~/Views/Shared/Layout2.cshtml";
}




<!-- Header End -->
<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a href="./home.html"><i class="fa fa-home"></i> Home</a>
                    <a href="./shop.html">Shop</a>
                    <span>Detail</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->
<!-- Product Shop Section Begin -->
<section class="product-shop spad page-details">
   
                <div class="container">
                    <div class="row">
                        



                        <div class="col-lg-9">
                            <div class="row">
                                <div class="col-lg-6">
                                   


                                    <div class="pt active" data-imgbigurl="img/product-single/product-1.jpg">
                                        <img src="@ViewBag.ürüngörsel" height="500" width="1200">
                                    </div>



                                </div>

                                <div class="col-lg-6">
                                    @foreach (var item in Model.ürn)
                                    {

                                        <div class="product-details">


                                            <div class="pd-title">
                                                <h5>@item.TblMarkalar.Marka</h5>
                                                <h3>@item.ÜrünAd</h3>
                                                <a href="/VitrinÜrünler/Favoriler/@item.Id">   <i class="icon_heart_alt"></i></a>
                                            </div>

                                            <div class="pd-desc">
                                                <p>
                                                    @item.ÜrünBilgi
                                                </p>
                                                <h4>@item.SatışFiyat</h4>
                                            </div>





                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input type="text" value="1">
                                                </div>

                                                <input type="hidden" name="Ürün" value="@ViewBag.Id" />

                                                <a href="/Sepet/SepeteEkle?id=@item.Id" class="primary-btn pd-cart"> Sepete Ekle </a>
                                            </div>




                                        </div>

                                    }
                                </div>
                            </div>
                            <div class="product-tab">
                                <div class="tab-item">
                                    <ul class="nav" role="tablist">
                                        <li>
                                            <a class="active" data-toggle="tab" href="#tab-1" role="tab">ÜRÜN HAKKINDA</a>
                                        </li>
                                        <li>
                                            <a data-toggle="tab" href="#tab-2" role="tab">ÜRÜN DETAY</a>
                                        </li>
                                        <li>
                                            <a data-toggle="tab" href="#tab-3" role="tab">YORUMLAR</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tab-item-content">
                                    <div class="tab-content">
                                        <div class="tab-pane fade-in active" id="tab-1" role="tabpanel">
                                            <div class="product-content">
                                                <div class="row">
                                                    <div class="col-lg-7">
                                                        @ViewBag.açıklama
                                                    </div>
                                                    <div class="col-lg-5">
                                                        <img src="img/product-single/tab-desc.jpg" alt="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="tab-2" role="tabpanel">
                                            <div class="specification-table">
                                                <table>

                                                    <tr>
                                                        <td class="p-catagory">Fiyat</td>
                                                        <td>
                                                            <div class="p-price">@ViewBag.fiyat</div>
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td class="p-catagory">Stok</td>
                                                        <td>
                                                            <div class="p-stock">@ViewBag.stok</div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="p-catagory">Ürün Adı</td>
                                                        <td>
                                                            <div class="p-weight">@ViewBag.ürünad</div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="p-catagory">Kategori</td>
                                                        <td>
                                                            <div class="p-size">@ViewBag.kategori</div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="p-catagory">Marka</td>
                                                        <td>
                                                            <div class="p-size">@ViewBag.marka</div>
                                                        </td>
                                                    </tr>


                                                </table>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="tab-3" role="tabpanel">
                                            <div class="customer-review-option">
                                                <h4>@ViewBag.d1 Yorum</h4>

                                                @foreach (var item in Model.yrm)
                                                {



                                                    <div class="comment-option">
                                                        <div class="co-item">

                                                            <div class="avatar-text">

                                                                <h5>@item.TblMüşteriler.Mail<span>@Convert.ToDateTime(item.Tarih).ToString("dd/MMMM/yyyy")</span></h5>
                                                                <div class="at-reply">@item.Yorum</div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                }

                                                <div class="leave-comment">
                                                    <h4>Ürün Değerlendirmeleri</h4>
                                                    <div class="comment-form">
                                                        @using (Html.BeginForm("YorumYap", "VitrinÜrünler", FormMethod.Post))
                                                        {

                                                            <div class="row">

                                                                <div class="col-lg-12">
                                                                    <input type="hidden" value="@ViewBag.Id" name="Ürün" />

                                                                    <input type="text" name="Yorum" placeholder="Yorum..." />
                                                                    <button type="submit" class="site-btn">Yorum Yap</button>
                                                                </div>
                                                            </div>

                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
</section>
