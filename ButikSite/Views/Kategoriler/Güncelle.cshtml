@model ButikSite.Models.TblKategoriler
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />

@using (Html.BeginForm("Güncelle2", "Kategoriler", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <label class="label label-primary">Kategori Adı</label>
    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary" style="background-color:#000000">Güncelle</button>

}

