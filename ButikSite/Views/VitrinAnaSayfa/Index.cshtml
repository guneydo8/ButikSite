}






<!-- Header End -->
<!-- Hero Section Begin -->
<section class="hero-section">
   
    <div class="hero-items owl-carousel">
        @foreach (var x in Model.ktg)
        {
        
            <div class="single-hero-items set-bg" data-setbg="/fashi-master/img/hero-1.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5">
                          
                            <h1 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">@x.KategoriAd</h1>
                            <br />
                           
                            <a href="#" class="primary-btn">Ürünleri Gör</a>
                        </div>
                    </div>
                
                </div>
            </div>
             }
        </div>
   
</section>
<!-- Hero Section End -->
<!-- Banner Section Begin -->
<div class="banner-section spad">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4">

                <div class="single-banner">
                    <img src="/fashi-master/img/banner-1.jpg" alt="">
                    <div class="inner-text">
                        <h4><a href="/VitrinÜrünler/Erkek/" style="color:black">Erkek</a></h4>

                    </div>
                </div>

