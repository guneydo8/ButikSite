                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Section End -->
<!-- Women Banner Section Begin -->
<section class="women-banner spad">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <div class="product-large set-bg" data-setbg="/fashi-master/img/products/women-large.jpg">
                    <h2>Kadın</h2>
                    <a href="/VitrinÜrünler/Kadın/">Keşfet</a>
                </div>
            </div>
            <div class="col-lg-8 offset-lg-1">
                

                <div class="product-slider owl-carousel">
                    @foreach (var x in Model.ürn.Where(x => x.Cinsiyet == "k"))
                    {
                        <div class="product-item">
                            <div class="pi-pic">
                                <img src="@x.ÜrünGörsel" width="300" height="300" alt="">
                                <div class="sale">Sale</div>
                                <div class="icon">
                                    <a href="/VitrinÜrünler/Favoriler/@x.Id">   <i class="icon_heart_alt"></i></a>
                                </div>
                                <ul>
                                    <li class="w-icon active"><a href="/Sepet/SepeteEkle/@x.Id"><i class="icon_bag_alt"></i></a></li>
                                    <li class="quick-view"><a href="/VitrinÜrünler/ÜrünDetay/@x.Id">+ Ürünü İncele</a></li>
                                    <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                </ul>
                            </div>

                            <div class="pi-text">
                                <div class="catagory-name">@x.TblMarkalar.Marka</div>
                                <a href="#">
                                    <h5>@x.ÜrünAd</h5>
                                </a>
                                <div class="product-price">
                                    @x.SatışFiyat

                                </div>
                            </div>

                        </div>

                    }

                </div>

            </div>
        </div>
    </div>
</section>
<!-- Women Banner Section End -->
<!-- Deal Of The Week Section Begin-->
<section style="margin-left:400px" >
    <span style="margin-left:50px"><img src="@ViewBag.d7" style="width:500px" /></span>
    <div class="container">
        <div class="col-lg-6 text-center">
            <div class="section-title">
                <h2>Trend Ürün</h2>
              
                <div class="product-price">
                    @ViewBag.d8
                    <span>/ @ViewBag.d9</span>
                </div>
            </div>
            
